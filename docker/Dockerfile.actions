# Dockerfile for Rasa actions server
FROM rasa/rasa-sdk:3.7.10

# Copy actions
COPY actions /app/actions

# Install requirements
COPY actions/requirements.txt /app/requirements.txt
RUN pip install -r /app/requirements.txt

# Set user
USER 1001

# Expose port
EXPOSE 5055

# Run actions server
CMD ["start", "--actions", "actions", "--port", "5055"]